---
import Header from "@components/Header.astro";

interface Props {
  title: string;
  gameId: string;
  scriptSrc: string;
}

const { title, gameId, scriptSrc } = Astro.props;
const hasScript = scriptSrc !== '';
const scriptPath = `./src/util/${scriptSrc}`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="https://fav.farm/ðŸ‘¾" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Serif+Text:ital@0;1&family=Poller+One&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <Header gameId={gameId} />
    <slot />
  </body>
  {hasScript && <script src={scriptPath}></script>}
</html>


<style>
  @import "@styles/global.css";

  html,
  body {
    margin: 0;
    padding: 0;
  }

  * {
    box-sizing: border-box;
  }
</style>
