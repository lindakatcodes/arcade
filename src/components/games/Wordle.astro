---
import Game from "./WordleComponents/Game";
---

<div class="wrapper">
  <div class="game-wrapper">
    <Game client:load />
  </div>
</div>

<style is:inline>
  /*
  Theme and global variables
*/
  html {
    /* overflow-y: scroll; */
    --game-spacing: 16px;
    --color-success: hsl(150deg 70% 30%);
    --color-warning: hsl(50deg 100% 30%);
    --color-error: hsl(0deg 70% 45%);
    --color-gray-100: hsl(0deg 0% 10%);
    --color-gray-300: hsl(0deg 0% 25%);
    --color-gray-500: hsl(0deg 0% 50%);
    --color-gray-700: hsl(0deg 0% 75%);
    --color-gray-900: hsl(0deg 0% 90%);
  }

  /*
  Custom styles
*/
  body {
    font-family: sans-serif;
  }

  button {
    margin: 0;
    padding: 0;
    border: none;
    background: transparent;
    cursor: pointer;
    text-align: left;
    color: inherit;
  }

  .wrapper {
    display: flex;
    flex-direction: column;
  }

  .game-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--game-spacing);
    padding: calc(var(--game-spacing) * 2) var(--game-spacing);
    margin: 0 auto;
    min-width: 250px;
    max-width: min(400px, 48vh, 100%);
  }

  .guess-results {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .guess {
    display: flex;
    justify-content: center;
    gap: 4px;
    margin: 0 auto 4px;
    width: 100%;
  }

  .cell {
    position: relative;
    width: 16%;
    display: grid;
    place-content: center;
    aspect-ratio: 1 / 1;
    border: 2px solid var(--color-gray-700);
    border-radius: var(--radius);
    font-size: 1.5rem;
  }

  /*
  Round the corners for the 4 cells at the very corners of
  the game board
*/
  .guess:first-of-type .cell:first-of-type {
    --radius: 4px 0px 0px 0px;
  }
  .guess:first-of-type .cell:last-of-type {
    --radius: 0px 4px 0px 0px;
  }
  .guess:last-of-type .cell:last-of-type {
    --radius: 0px 0px 4px 0px;
  }
  .guess:last-of-type .cell:first-of-type {
    --radius: 0px 0px 0px 4px;
  }

  .cell.correct {
    background: var(--color-success);
    border-color: var(--color-success);
    color: white;
  }

  .cell.incorrect {
    background: var(--color-gray-300);
    border-color: var(--color-gray-300);
    color: white;
  }

  .cell.misplaced {
    background: var(--color-warning);
    border-color: var(--color-warning);
    color: white;
  }

  .guess-input-wrapper {
    display: flex;
    flex-direction: column;
    gap: 8px;
    height: 6.75rem;
    color: var(--c-black);
  }

  .guess-input-wrapper label {
    font-size: 1rem;
  }

  .guess-input-wrapper input {
    display: block;
    width: 100%;
    font-size: 1.125rem;
    border: 2px solid var(--color-gray-300);
    border-radius: 4px;
    padding: 4px 8px;
    outline-offset: 4px;
  }

  .guess-input-hint {
    font-size: 0.8em;
  }

  .banner {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 25%;
    width: 90%;
    max-width: 500px;
    margin: 0 auto;
    padding: var(--game-spacing);
    text-align: center;
    animation: slideUp 750ms cubic-bezier(0, 0.72, 0.24, 1.02);
    border-radius: 4px 4px 0px 0px;
    will-change: transform;
  }

  .banner button {
    margin-top: 10px;
    padding: 2%;
    border-radius: 4px;
    border: 2px outset var(--color-gray-300);
    background: var(--color-gray-500);
    text-align: center;
  }

  .happy.banner {
    background: var(--color-success);
    color: white;
  }

  .sad.banner {
    background: var(--color-error);
    color: white;
  }

  .visually-hidden {
    position: absolute;
    overflow: hidden;
    clip: rect(0 0 0 0);
    height: 1px;
    width: 1px;
    margin: -1px;
    padding: 0;
    border: 0;
  }

  .keyboard-row {
    display: flex;
    justify-content: center;
  }

  .key {
    position: relative;
    width: 10%;
    display: grid;
    place-content: center;
    aspect-ratio: 1 / 1;
    border-radius: 4px;
    font-size: 0.9rem;
    font-weight: bold;
    margin: 0.5%;
  }

  .key.none {
    background: var(--color-gray-700);
    border-color: var(--color-gray-700);
    color: black;
  }

  .key.correct {
    background: var(--color-success);
    border-color: var(--color-success);
    color: white;
  }

  .key.incorrect {
    background: var(--color-gray-300);
    border-color: var(--color-gray-300);
    color: white;
  }

  .key.misplaced {
    background: var(--color-warning);
    border-color: var(--color-warning);
    color: white;
  }

  /*
  Keyframe animations
*/
  @keyframes slideUp {
    from {
      transform: translateY(100%);
    }
    to {
      transform: translateY(0%);
    }
  }
</style>
