---
interface Props {
  gameColor?: string;
  needsBorderRadius: boolean;
}

const { gameColor = "", needsBorderRadius } = Astro.props;
---

<section class:list={[`panel-front ${gameColor}`, {'curved-border': needsBorderRadius}]}>
  <div class="panel-info">
    <slot />
  </div>
  <div class="panel-coinslot"><p>Â¢</p></div>
</section>

<style>
  .panel-front {
    display: grid;
    grid-template-columns: 75% 12%;
    justify-content: space-around;
    background-color: var(--c-base);
    margin-top: 5px;
    border-top-width: 4px;
    border-top-style: solid;
  }
  
  .curved-border {
    border-radius: 0 0 41px 0 / 0 0 51px 0; 
  }

  .panel-info {
    padding: 0.25rem;
    margin: 0.25rem 0.5rem 0.25rem 0.25rem;
  }

  .panel-coinslot {
    height: 4.5em;
    background-color: var(--c-black);
    border-radius: 5px;
    position: relative;
    font-size: 0.8rem;
    text-align: center;
    font-family: var(--display-font);
    margin-right: 0.25rem;
    margin-top: 0.375rem;
  }

  .panel-coinslot p {
    margin: 0.125rem 0 0;
  }

  .panel-coinslot::after {
    content: "";
    display: block;
    position: absolute;
    top: 2em;
    left: calc(50% - 0.2em);
    width: 0.4em;
    height: 1.4em;
    background-color: var(--c-white);
    border-radius: 3px;
  }
</style>
