---
interface Props {
  gameColor?: string;
}

const { gameColor = "" } = Astro.props;
---

<section class:list={`panel-front ${gameColor}`}>
  <div class="panel-info">
    <slot />
  </div>
  <div class="panel-coinslot"><p>Â¢</p></div>
</section>

<style>
  .panel-front {
    border-top-width: 4px;
    border-top-style: solid;
    margin-top: 5px;
    display: grid;
    grid-template-columns: 85% 15%;
    background-color: var(--c-base);
  }

  @media (min-width: 600px) {
    .panel-front {
      grid-template-columns: 90% 10%;
    }
  }

  .panel-info {
    padding: 0.25rem;
    margin: 0.25rem 0.5rem 0.25rem 0.25rem;
  }

  .panel-coinslot {
    height: 4.5em;
    background-color: var(--c-black);
    border-radius: 5px;
    position: relative;
    font-size: 0.8rem;
    text-align: center;
    font-family: var(--display-font);
    margin-right: 0.25rem;
    margin-top: 0.375rem;
  }

  .panel-coinslot p {
    margin: 0.125rem 0 0;
  }

  .panel-coinslot::after {
    content: "";
    display: block;
    position: absolute;
    top: 2em;
    left: calc(50% - 0.2em);
    width: 0.4em;
    height: 1.4em;
    background-color: var(--c-white);
    border-radius: 3px;
  }
</style>
