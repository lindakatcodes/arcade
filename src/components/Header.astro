---
import { getEntry } from 'astro:content';

interface Props {
  gameId: string,
}

const defaultData = {
  data: { 
    title: 'default', 
    tags: ['<3', 'your', 'data']
  }
}

const { gameId } = Astro.props;
const gameInfo = await getEntry('games', gameId) || defaultData;
---

<header>
  <div>
    <a href="/"> ðŸ ” Back to the arcade</a>
    <p>{gameInfo!.data.title}</p>
    <ul class="tags">
      Built with:
      {gameInfo!.data.tags.map((tag) => <li> - {tag}</li>)}
    </ul>
  </div>
</header>

<style>
  header {
    background-color: var(--base-color);
    width: 100%;
    height: 130px;
    font-family: var(--body-font);
    font-size: var(--font-size-base);
    border-bottom: 4px ridge var(--accent-color-pink);
  }

  div {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 95%;
  }

  a {
    color: var(--text-color);
    text-decoration: none;
    margin-left: 3%;
  }

  p {
    font-size: var(--font-size-xl);
    color: var(--text-color);
    font-family: var(--display-font);
    text-align: center;
    margin: 0;
  }

  ul {
    list-style-type: none;
    color: var(--text-color);
    display: flex;
    flex-direction: column;
  }

  li {
    color: var(--text-color);
  }
</style>
